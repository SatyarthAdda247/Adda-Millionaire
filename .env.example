# API Integration Reliability - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# AppTrove API Configuration (REQUIRED)
# ============================================================================

# AppTrove SDK Key for client-side operations
APPTROVE_SDK_KEY=your_sdk_key_here

# AppTrove Server-to-Server API Key
APPTROVE_S2S_API_KEY=your_s2s_api_key_here

# AppTrove Secret ID for authentication
APPTROVE_SECRET_ID=your_secret_id_here

# AppTrove Secret Key for authentication
APPTROVE_SECRET_KEY=your_secret_key_here

# AppTrove Reporting API Key for analytics
APPTROVE_REPORTING_API_KEY=your_reporting_api_key_here

# ============================================================================
# Database Configuration (REQUIRED)
# ============================================================================

# AWS region for DynamoDB
AWS_REGION=us-east-1

# Prefix for DynamoDB table names
DYNAMODB_TABLE_PREFIX=api-integration-reliability

# ============================================================================
# System Configuration
# ============================================================================

# Node.js environment (development, production, test)
NODE_ENV=development

# Logging level (debug, info, warn, error, fatal)
LOG_LEVEL=info

# ============================================================================
# Circuit Breaker Configuration (OPTIONAL)
# ============================================================================

# Number of failures before opening circuit breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Circuit breaker recovery timeout in milliseconds
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000

# ============================================================================
# Retry Configuration (OPTIONAL)
# ============================================================================

# Maximum retry attempts for failed API calls
RETRY_MAX_ATTEMPTS=3

# Base delay for retry attempts in milliseconds
RETRY_BASE_DELAY=1000

# Maximum delay for retry attempts in milliseconds
RETRY_MAX_DELAY=10000

# ============================================================================
# Monitoring Configuration (OPTIONAL)
# ============================================================================

# Health check interval in milliseconds (5 minutes default)
HEALTH_CHECK_INTERVAL=300000

# Analytics sync interval in milliseconds (15 minutes default)
ANALYTICS_SYNC_INTERVAL=900000

# ============================================================================
# Notification Configuration (REQUIRED)
# ============================================================================

# Administrator email for notifications
ADMIN_EMAIL=admin@example.com

# URL for external notification service (optional)
NOTIFICATION_SERVICE_URL=https://your-notification-service.com/webhook

# ============================================================================
# Development/Testing Configuration (OPTIONAL)
# ============================================================================

# Local DynamoDB endpoint (for development)
# DYNAMODB_ENDPOINT=http://localhost:8000

# AWS credentials (for local development)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key